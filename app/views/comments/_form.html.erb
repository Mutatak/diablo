<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commentor %><br>
    <%= form.text_field :commentor, placeholder: "Write here" %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, placeholder: "Write here" %>
  </p>
  <p>
    <%= form.submit %>
  </p>

  <p>
  <%= form.label :status %><br>
  <%= form.select :status, Visible::VALID_STATUSES, selected: 'public' %>
  </p>
<% end %>
